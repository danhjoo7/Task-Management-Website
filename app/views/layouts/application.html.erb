<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Home</a>  
  <a class="navbar-brand" href="/tasks">All Tasks</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <% if logged_in? %>
      <li class="nav-item active">
      <a data-method="delete" class="nav-link" href="/logout" rel="nofollow">Logout<span class="sr-only">(current)</span></a>
      </li>
    <% else %>
      <li class="nav-item active">
      <a class="nav-link" href="/login">Login<span class="sr-only">(current)</span></a>
      </li>
    <% end %>
      <li class="nav-item">
        <a class="nav-link active" href="/users">All Users</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/tasks/new">Create Task</a>
      </li>
      <li class="nav-item dropdown active">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Account
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/users/">My Profile</a>
          <a class="dropdown-item" href="/tasks/new">My Tasks</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/signup"></a>
        </div>
      </li>
    </ul>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
    






