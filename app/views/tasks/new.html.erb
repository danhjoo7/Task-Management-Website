<h1>Create a New Task</h1> 

<% if @task.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(@task.errors.count, "error") %>
      prohibited this post from being saved:
    </h4>
 
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@task) do |f|%>
    <%= f.label :assignee %>
    <%= f.collection_select(:assignee_id, User.all, :id, :name) %><br>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :category %>
    <%= f.select :category, ['Cleaning', 'Shopping/Supplies', 'Reservations', 'Reimbursements', 'Maintenance']%><br>
    <%= f.label :priority %>
    <%= f.select :priority, ['Low', 'Medium', 'High', 'Immediate Action Required']%><br>
    <%= f.label :description %><br>
    <%= f.text_area :content %><br>
    <%= f.submit %>
<% end %>






    