<h1>Create a New Task</h1> 

<%= form_for @task do |f|%>
    <%= f.label :assignee %><br>
    <%= f.collection_select(:assignee_id, User.all, :id, :name) %><br>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :category %><br>
    <%= f.text_field :category %><br>
    <%= f.label :priority %><br>
    <%= f.text_field :priority %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.submit %>
<% end %>




    