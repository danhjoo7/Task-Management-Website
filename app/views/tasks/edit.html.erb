<h1>Edit Task</h1>

<% if @task.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@task.errors.count, "error") %>
      prohibited this post from being saved:
    </h3>
 
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@task) do |f|%>
    <%= f.label :status %><br>
    <%= f.select :status, ['In Progress','Blocked','Completed'] %><br>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :category %><br>
    <%= f.select :category, ['Cleaning', 'Shopping/Supplies', 'Reservations', 'Reimbursements', 'Maintenance']%><br>
    <%= f.label :priority %><br>
    <%= f.select :priority, ['Low', 'Medium', 'High', 'Immediate Action Required']%><br>
    <%= f.label :description %><br>
    <%= f.text_area :content %><br>
    <%= f.submit %>
<% end %>